    },
    "components": {
        "schemas": {
            "ErrorResponse": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Error ocorried."
                    },
                    "route": {
                        "type": "string",
                        "example": "api/error"
                    }
                },
                "type": "object"
            },
            "Raffle": {
                "required": [
                    "name",
                    "maximum_numbers",
                    "start_date",
                    "ticket_value"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "maxLength": 120,
                        "minLength": 3,
                        "example": "Xbox Series S"
                    },
                    "maximum_numbers": {
                        "type": "integer",
                        "example": 100
                    },
                    "start_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2024-12-01"
                    },
                    "end_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-01-30"
                    },
                    "ticket_value": {
                        "type": "number",
                        "format": "double",
                        "maximum": 999.99,
                        "minimum": 0.01,
                        "example": 20
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-01-30T03:00:00.000000Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-01-30T03:00:00.000000Z"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "apiKey",
                "description": "Enter token in format (Bearer <token>)",
                "name": "Authorization",
                "in": "header"
            }
        }
    },
    "tags": [
        {
            "name": "Raffle",
            "description": "Raffle"
        }
    ]
